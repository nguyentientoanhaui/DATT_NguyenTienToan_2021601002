@model Shopping_Demo.Models.InvoiceViewModel
@{
    ViewData["Title"] = "In hóa đơn";
    Layout = null; // Không sử dụng layout để in sạch
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hóa đơn @Model.Order.OrderCode</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 12px;
            line-height: 1.4;
            color: #333;
            background: white;
        }

        .invoice-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background: white;
        }

        .invoice-header {
            border-bottom: 3px solid #007bff;
            padding-bottom: 20px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .company-info {
            flex: 1;
        }

        .company-name {
            color: #007bff;
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .company-details {
            color: #666;
            line-height: 1.5;
            font-size: 11px;
        }

        .invoice-info {
            text-align: right;
            flex: 1;
        }

        .invoice-title {
            color: #333;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .invoice-details p {
            margin: 3px 0;
            font-size: 11px;
        }

        .invoice-body {
            margin-bottom: 20px;
        }

        .info-section {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .customer-info, .payment-info {
            flex: 1;
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            border-left: 4px solid #007bff;
        }

        .customer-info h4, .payment-info h4 {
            color: #007bff;
            margin-bottom: 10px;
            font-size: 13px;
            font-weight: 600;
        }

        .address-details {
            background: white;
            padding: 10px;
            border-radius: 3px;
            margin-top: 8px;
            font-size: 11px;
        }

        .products-section {
            margin: 20px 0;
        }

        .products-section h4 {
            color: #007bff;
            margin-bottom: 15px;
            font-size: 14px;
            font-weight: 600;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }

        .products-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .products-table th {
            background: #007bff;
            color: white;
            font-weight: bold;
            text-align: center;
            padding: 8px 4px;
            font-size: 10px;
            border: 1px solid #0056b3;
        }

        .products-table td {
            padding: 6px 4px;
            border: 1px solid #ddd;
            vertical-align: middle;
            font-size: 10px;
        }

        .products-table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .product-image {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 3px;
            border: 1px solid #ddd;
        }

        .no-image {
            width: 40px;
            height: 40px;
            background: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 3px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 8px;
            color: #666;
        }

        .invoice-summary {
            margin-top: 20px;
        }

        .summary-table {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            border: 2px solid #007bff;
            max-width: 300px;
            margin-left: auto;
        }

        .summary-table table {
            width: 100%;
            border-collapse: collapse;
        }

        .summary-table td {
            padding: 4px 0;
            font-size: 11px;
        }

        .total-row {
            border-top: 2px solid #007bff;
            background: #e3f2fd;
            margin-top: 8px;
        }

        .total-row td {
            font-size: 13px;
            font-weight: bold;
            color: #007bff;
            padding: 6px 0;
        }

        .invoice-footer {
            border-top: 2px solid #007bff;
            padding-top: 15px;
            margin-top: 20px;
            display: flex;
            gap: 20px;
        }

        .terms-conditions {
            flex: 1;
        }

        .terms-conditions h5 {
            color: #007bff;
            margin-bottom: 10px;
            font-size: 12px;
            font-weight: 600;
        }

        .terms-conditions ul {
            margin: 0;
            padding-left: 15px;
        }

        .terms-conditions li {
            margin-bottom: 4px;
            color: #666;
            line-height: 1.4;
            font-size: 10px;
        }

        .signature-section {
            flex: 1;
            text-align: center;
        }

        .signature-box {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .signature-line {
            margin-top: 30px;
            border-top: 1px solid #333;
            padding-top: 8px;
        }

        .badge {
            padding: 2px 6px;
            border-radius: 3px;
            font-size: 9px;
            font-weight: 500;
        }

        .bg-success {
            background-color: #28a745 !important;
            color: white !important;
        }

        .bg-warning {
            background-color: #ffc107 !important;
            color: #212529 !important;
        }

        .bg-primary {
            background-color: #007bff !important;
            color: white !important;
        }

        .bg-secondary {
            background-color: #6c757d !important;
            color: white !important;
        }

        .bg-danger {
            background-color: #dc3545 !important;
            color: white !important;
        }

        /* Print specific styles */
        @@media print {
            body {
                font-size: 11px;
            }
            
            .invoice-container {
                padding: 0;
                margin: 0;
            }
            
            .company-name {
                font-size: 18px;
            }
            
            .invoice-title {
                font-size: 16px;
            }
            
            .products-table th,
            .products-table td {
                padding: 4px 2px;
                font-size: 9px;
            }
            
            .product-image {
                width: 30px;
                height: 30px;
            }
            
            .summary-table {
                padding: 10px;
            }
            
            .summary-table td {
                font-size: 10px;
            }
            
            .total-row td {
                font-size: 12px;
            }
            
            .terms-conditions li {
                font-size: 9px;
            }
        }

        /* Page break */
        @@media print {
            @@page {
                margin: 1cm;
                size: A4;
            }
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="invoice-header">
            <div class="company-info">
                <h1 class="company-name">CỬA HÀNG ĐỒNG HỒ CAO CẤP</h1>
                <p class="company-details">
                    <strong>Địa chỉ:</strong> 01-05, Tầng 1 Tràng Tiền Plaza<br>
                    24 Hai Bà Trưng, Phường Cửa Nam<br>
                    Quận Hoàn Kiếm, Thành phố Hà Nội<br>
                    <strong>Điện thoại:</strong> 0388672928<br>
                    <strong>Email:</strong> support@donghocaocap.com
                </p>
            </div>
            <div class="invoice-info">
                <h2 class="invoice-title">HÓA ĐƠN BÁN HÀNG</h2>
                <div class="invoice-details">
                    <p><strong>Mã hóa đơn:</strong> @Model.Order.OrderCode</p>
                    <p><strong>Ngày tạo:</strong> @Model.Order.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Trạng thái:</strong> 
                        <span class="badge @(Model.Order.Status == 1 ? "bg-success" : "bg-warning")">
                            @(Model.Order.Status == 1 ? "Đã xác nhận" : "Chờ xử lý")
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <div class="invoice-body">
            <div class="info-section">
                <div class="customer-info">
                    <h4>Thông tin khách hàng</h4>
                    <div class="customer-details">
                        <p><strong>Tên khách hàng:</strong> @Model.Order.UserName</p>
                        <p><strong>Địa chỉ giao hàng:</strong></p>
                        <div class="address-details">
                            @Model.Order.ShippingAddress<br>
                            @Model.Order.ShippingWard, @Model.Order.ShippingDistrict<br>
                            @Model.Order.ShippingCity
                        </div>
                    </div>
                </div>
                <div class="payment-info">
                    <h4>Thông tin thanh toán</h4>
                    <div class="payment-details">
                        <p><strong>Phương thức thanh toán:</strong> 
                            @if (Model.Order.PaymentMethod == "MoMo")
                            {
                                <span class="badge bg-primary">MoMo</span>
                            }
                            else if (Model.Order.PaymentMethod == "COD")
                            {
                                <span class="badge bg-warning">Thanh toán khi nhận hàng</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Order.PaymentMethod</span>
                            }
                        </p>
                        @if (Model.PaymentInfo != null)
                        {
                            <p><strong>Mã giao dịch:</strong> @Model.PaymentInfo.OrderCode</p>
                            <p><strong>Ngày thanh toán:</strong> @Model.PaymentInfo.DatePaid.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Trạng thái:</strong> 
                                <span class="badge @(Model.PaymentInfo.TransactionStatus == "Success" ? "bg-success" : "bg-danger")">
                                    @(Model.PaymentInfo.TransactionStatus == "Success" ? "Thành công" : "Thất bại")
                                </span>
                            </p>
                        }
                    </div>
                </div>
            </div>

            <div class="products-section">
                <h4>Chi tiết sản phẩm</h4>
                <table class="products-table">
                    <thead>
                        <tr>
                            <th width="5%">STT</th>
                            <th width="15%">Hình ảnh</th>
                            <th width="30%">Tên sản phẩm</th>
                            <th width="10%">Màu sắc</th>
                            <th width="10%">Kích thước</th>
                            <th width="10%">Số lượng</th>
                            <th width="10%">Đơn giá</th>
                            <th width="10%">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var item in Model.Order.OrderDetails)
                        {
                            <tr>
                                <td class="text-center">@index</td>
                                <td class="text-center">
                                    @if (item.Product != null && !string.IsNullOrEmpty(item.Product.Image))
                                    {
                                        <img src="@item.Product.Image" alt="@item.Product.Name" class="product-image">
                                    }
                                    else
                                    {
                                        <div class="no-image">N/A</div>
                                    }
                                </td>
                                <td>
                                    <strong>@(item.Product?.Name ?? "Sản phẩm không tồn tại")</strong>
                                    @if (item.Product != null && !string.IsNullOrEmpty(item.Product.Model))
                                    {
                                        <br><small>Model: @item.Product.Model</small>
                                    }
                                </td>
                                <td class="text-center">@(item.ColorName ?? "N/A")</td>
                                <td class="text-center">@(item.SizeName ?? "N/A")</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.Price.ToString("N0")₫</td>
                                <td class="text-end"><strong>@((item.Price * item.Quantity).ToString("N0"))₫</strong></td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>

            <div class="invoice-summary">
                <div class="summary-table">
                    <table>
                        <tr>
                            <td><strong>Tạm tính:</strong></td>
                            <td class="text-end">@Model.Subtotal.ToString("N0")₫</td>
                        </tr>
                        @if (Model.DiscountAmount > 0)
                        {
                            <tr class="text-success">
                                <td><strong>Giảm giá:</strong></td>
                                <td class="text-end">-@Model.DiscountAmount.ToString("N0")₫</td>
                            </tr>
                        }
                        <tr>
                            <td><strong>Phí vận chuyển:</strong></td>
                            <td class="text-end">@Model.ShippingCost.ToString("N0")₫</td>
                        </tr>
                        <tr class="total-row">
                            <td><strong>TỔNG CỘNG:</strong></td>
                            <td class="text-end"><strong>@Model.TotalAmount.ToString("N0")₫</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="invoice-footer">
            <div class="terms-conditions">
                <h5>Điều khoản và điều kiện:</h5>
                <ul>
                    <li>Sản phẩm được bảo hành chính hãng theo chính sách của nhà sản xuất</li>
                    <li>Khách hàng có thể đổi trả trong vòng 7 ngày nếu sản phẩm có lỗi</li>
                    <li>Hóa đơn này là chứng từ hợp lệ để bảo hành và đổi trả</li>
                    <li>Mọi thắc mắc vui lòng liên hệ hotline: 0388672928</li>
                </ul>
            </div>
            <div class="signature-section">
                <div class="signature-box">
                    <p>
                        <strong>Cảm ơn quý khách!</strong><br>
                        Hẹn gặp lại quý khách lần sau
                    </p>
                    <div class="signature-line">
                        <p>
                            <strong>Người lập hóa đơn</strong><br>
                            <em>(Ký và ghi rõ họ tên)</em>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Tự động in khi trang load
        window.onload = function() {
            setTimeout(function() {
                window.print();
            }, 500);
        };

        // Quay lại trang trước sau khi in
        window.onafterprint = function() {
            window.close();
        };
    </script>
</body>
</html>
