@model Shopping_Demo.Models.InvoiceViewModel
@{
    ViewData["Title"] = "Hóa đơn đơn hàng: " + Model.Order.OrderCode;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .invoice-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin: 30px auto;
            max-width: 1000px;
            overflow: hidden;
        }
        
        .invoice-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        
        .invoice-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
        }
        
        .invoice-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
        }
        
        .invoice-body {
            padding: 40px;
        }
        
        .company-info {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }
        
        .order-info {
            background: #e3f2fd;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }
        
        .products-table {
            margin-bottom: 30px;
        }
        
        .table {
            border-radius: 10px;
            overflow: hidden;
        }
        
        .table thead th {
            background: #667eea;
            color: white;
            border: none;
            font-weight: 600;
        }
        
        .table tbody td {
            border-color: #e9ecef;
            vertical-align: middle;
        }
        
        .summary-card {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
        }
        
        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            padding: 5px 0;
        }
        
        .summary-total {
            border-top: 2px solid #667eea;
            padding-top: 15px;
            margin-top: 15px;
            font-size: 1.2rem;
            font-weight: 700;
            color: #667eea;
        }
        
        .action-buttons {
            background: white;
            border-top: 1px solid #e9ecef;
            padding: 20px 40px;
            text-align: center;
        }
        
        .btn-action {
            margin: 0 10px;
            padding: 12px 25px;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }
        
        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
        }
        
        .btn-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            border: none;
        }
        
        .btn-info {
            background: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%);
            color: white;
            border: none;
        }
        
        .btn-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="invoice-container">
            <!-- Header -->
            <div class="invoice-header">
                <h1 class="invoice-title">
                    <i class="fas fa-receipt"></i> HÓA ĐƠN BÁN HÀNG
                </h1>
                <p class="invoice-subtitle">Mã đơn hàng: @Model.Order.OrderCode</p>
            </div>
            
            <!-- Body -->
            <div class="invoice-body">
                <!-- Company Info -->
                <div class="company-info">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="text-primary mb-3">
                                <i class="fas fa-store"></i> CỬA HÀNG ĐỒNG HỒ CAO CẤP
                            </h3>
                            <p class="mb-1"><strong>Địa chỉ:</strong> 123 Đường ABC, Quận 1, TP.HCM</p>
                            <p class="mb-1"><strong>Điện thoại:</strong> (028) 1234-5678</p>
                            <p class="mb-0"><strong>Email:</strong> info@watchstore.com</p>
                        </div>
                        <div class="col-md-4">
                            <div class="order-info">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle"></i> Thông tin đơn hàng
                                </h5>
                                <p class="mb-1"><strong>Mã đơn hàng:</strong> @Model.Order.OrderCode</p>
                                <p class="mb-1"><strong>Ngày tạo:</strong> @Model.Order.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                                <p class="mb-0"><strong>Trạng thái:</strong> 
                                    @switch (Model.Order.Status)
                                    {
                                        case 0: <span class="badge bg-success">Đã giao hàng</span>; break;
                                        case 1: <span class="badge bg-primary">Đơn hàng mới</span>; break;
                                        case 2: <span class="badge bg-warning">Chờ xác nhận</span>; break;
                                        case 3: <span class="badge bg-danger">Đã hủy</span>; break;
                                        case 4: <span class="badge bg-info">Đang giao hàng</span>; break;
                                        case 5: <span class="badge bg-warning">Yêu cầu hoàn hàng</span>; break;
                                        case 6: <span class="badge bg-secondary">Hoàn hàng thành công</span>; break;
                                        default: <span class="badge bg-secondary">Không xác định</span>; break;
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Customer Info -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border-primary">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-user"></i> Thông tin khách hàng</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-1"><strong>Tên:</strong> @Model.Order.UserName</p>
                                <p class="mb-1"><strong>Email:</strong> @Model.Order.UserName</p>
                                <p class="mb-0"><strong>Địa chỉ:</strong> @Model.Order.ShippingAddress, @Model.Order.ShippingWard, @Model.Order.ShippingDistrict, @Model.Order.ShippingCity</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-info">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0"><i class="fas fa-credit-card"></i> Thông tin thanh toán</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-1"><strong>Phương thức:</strong> @(Model.Order.PaymentMethod == "COD" ? "Thanh toán khi nhận hàng" : "Thanh toán online")</p>
                                @if (Model.PaymentInfo != null)
                                {
                                    <p class="mb-1"><strong>Mã giao dịch:</strong> @Model.PaymentInfo.Id</p>
                                    <p class="mb-0"><strong>Trạng thái:</strong> @Model.PaymentInfo.TransactionStatus</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Products Table -->
                <div class="products-table">
                    <h5 class="mb-3">
                        <i class="fas fa-shopping-cart"></i> Chi tiết sản phẩm
                    </h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th width="5%">STT</th>
                                    <th width="15%">Hình ảnh</th>
                                    <th width="35%">Tên sản phẩm</th>
                                    <th width="15%">Model</th>
                                    <th width="10%">Số lượng</th>
                                    <th width="10%">Đơn giá</th>
                                    <th width="10%">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                }
                                @foreach (var item in Model.Order.OrderDetails ?? new List<OrderDetails>())
                                {
                                    <tr>
                                        <td>@stt</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Product?.Image))
                                            {
                                                <img src="@item.Product.Image" alt="@item.Product.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                    <i class="fas fa-image text-muted"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@item.Product?.Name</strong>
                                            @if (!string.IsNullOrEmpty(item.Product?.Description))
                                            {
                                                <br><small class="text-muted">@item.Product.Description</small>
                                            }
                                        </td>
                                        <td>@item.Product?.Model</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.Price.ToString("N0")₫</td>
                                        <td class="text-end"><strong>@((item.Quantity * item.Price).ToString("N0"))₫</strong></td>
                                    </tr>
                                    stt++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Summary -->
                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <div class="summary-card">
                            <h5 class="mb-3">
                                <i class="fas fa-calculator"></i> Tổng kết
                            </h5>
                            <div class="summary-row">
                                <span>Tạm tính:</span>
                                <span>@Model.Subtotal.ToString("N0")₫</span>
                            </div>
                            @if (Model.DiscountAmount > 0)
                            {
                                <div class="summary-row text-danger">
                                    <span>Giảm giá:</span>
                                    <span>-@Model.DiscountAmount.ToString("N0")₫</span>
                                </div>
                            }
                            <div class="summary-row">
                                <span>Phí vận chuyển:</span>
                                <span>@Model.ShippingCost.ToString("N0")₫</span>
                            </div>
                            <div class="summary-row summary-total">
                                <span>TỔNG CỘNG:</span>
                                <span>@Model.TotalAmount.ToString("N0")₫</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="@Url.Action("Index", "InvoiceView")" class="btn-action btn-secondary">
                    <i class="fas fa-search"></i> Tra cứu khác
                </a>
                
                <div class="btn-group">
                    <button type="button" class="btn-action btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-download"></i> Tải xuống
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("Download", "InvoiceView", new { orderCode = Model.Order.OrderCode, format = "pdf" })">
                            <i class="fas fa-file-pdf text-danger"></i> PDF
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Download", "InvoiceView", new { orderCode = Model.Order.OrderCode, format = "excel" })">
                            <i class="fas fa-file-excel text-success"></i> Excel
                        </a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Download", "InvoiceView", new { orderCode = Model.Order.OrderCode, format = "csv" })">
                            <i class="fas fa-file-csv text-info"></i> CSV
                        </a></li>
                    </ul>
                </div>
                
                <a href="@Url.Action("Print", "Invoice", new { orderCode = Model.Order.OrderCode })" target="_blank" class="btn-action btn-primary">
                    <i class="fas fa-print"></i> In hóa đơn
                </a>
                
                <a href="@Url.Action("Index", "Home")" class="btn-action btn-primary">
                    <i class="fas fa-home"></i> Về trang chủ
                </a>
            </div>
        </div>
    </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    </script>
</body>
</html>
