@{
    ViewData["Title"] = "Check Duplicate Products";
}

<div class="container mt-4">
    <h2>Check Duplicate Products</h2>
    
    @if (ViewBag.Duplicates != null && ViewBag.Duplicates.Count > 0)
    {
        <div class="alert alert-warning">
            <strong>Found @ViewBag.Duplicates.Count duplicate groups!</strong>
        </div>
        
        <form method="post" action="@Url.Action("RemoveDuplicateProducts")" onsubmit="return confirm('Are you sure you want to remove all duplicate products? This action cannot be undone.');">
            <button type="submit" class="btn btn-danger mb-3">
                <i class="fas fa-trash"></i> Remove All Duplicates
            </button>
        </form>
        
        @foreach (var duplicate in ViewBag.Duplicates)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5>@duplicate.Name - @duplicate.BrandName (@duplicate.Count duplicates)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Brand</th>
                                    <th>Price</th>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in duplicate.Products)
                                {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>@product.BrandName</td>
                                        <td>@product.Price.ToString("N0").Replace(",", ".") VNƒê</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(product.Image))
                                            {
                                                <img src="~/media/products/@product.Image" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <span class="text-muted">No image</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-success">
            <strong>No duplicate products found!</strong> Your database is clean.
        </div>
    }
    
    <div class="mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
