<!DOCTYPE html>
<html>
<head>
    <title>Test Star Rating</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .star-btn {
            background: none;
            border: none;
            font-size: 32px;
            color: #ddd;
            cursor: pointer;
            transition: all 0.2s ease;
            padding: 5px;
            margin: 0 2px;
        }
        
        .star-btn:hover,
        .star-btn.active {
            color: #ffc107;
            transform: scale(1.1);
        }
        
        .star-btn:focus {
            outline: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Test Star Rating</h2>
        
        <div class="form-group mb-4">
            <label class="form-label fw-bold">Đánh Giá *</label>
            <div class="star-rating-container">
                <div class="star-rating d-flex align-items-center">
                    <div class="stars me-3">
                        <button type="button" class="star-btn" data-value="1">★</button>
                        <button type="button" class="star-btn" data-value="2">★</button>
                        <button type="button" class="star-btn" data-value="3">★</button>
                        <button type="button" class="star-btn" data-value="4">★</button>
                        <button type="button" class="star-btn" data-value="5">★</button>
                    </div>
                    <span class="rating-label text-muted">Chọn số sao để đánh giá</span>
                </div>
            </div>
            <input type="hidden" id="rating-input" />
        </div>
        
        <div id="debug-info">
            <p>Selected Rating: <span id="selected-rating">0</span></p>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            console.log('Test page loaded');
            
            const stars = $('.star-btn');
            const ratingInput = $('#rating-input');
            const ratingLabel = $('.rating-label');
            const selectedRatingDisplay = $('#selected-rating');
            
            console.log('Found elements:', {
                stars: stars.length,
                ratingInput: ratingInput.length,
                ratingLabel: ratingLabel.length
            });
            
            const ratingTexts = {
                0: 'Chọn số sao để đánh giá',
                1: 'Rất không hài lòng ★',
                2: 'Không hài lòng ★★',
                3: 'Bình thường ★★★',
                4: 'Hài lòng ★★★★',
                5: 'Rất hài lòng ★★★★★'
            };
            
            let currentRating = 0;
            
            // Click event for each star
            stars.on('click', function() {
                console.log('Star clicked');
                const rating = parseInt($(this).attr('data-value'));
                console.log('Rating selected:', rating);
                
                currentRating = rating;
                ratingInput.val(rating);
                selectedRatingDisplay.text(rating);
                
                updateStars(rating);
                ratingLabel.text(ratingTexts[rating]);
            });
            
            // Hover effect
            stars.on('mouseenter', function() {
                const rating = parseInt($(this).attr('data-value'));
                updateStars(rating);
            });
            
            // Reset to current rating on mouse leave
            $('.stars').on('mouseleave', function() {
                updateStars(currentRating);
                ratingLabel.text(ratingTexts[currentRating]);
            });
            
            function updateStars(rating) {
                console.log('Updating stars for rating:', rating);
                stars.each(function(index) {
                    if (index < rating) {
                        $(this).addClass('active');
                    } else {
                        $(this).removeClass('active');
                    }
                });
            }
        });
    </script>
</body>
</html>
