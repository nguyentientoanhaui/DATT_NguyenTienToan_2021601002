@model IEnumerable<OrderDetails>

@{
    ViewData["Title"] = "View Order Details";
}

<style>
    body-card {
        margin: 0;
        font-family: "Nunito", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        font-size: 14px;
        font-weight: 400;
        line-height: 1.5;
        color: #858796;
        text-align: left;
        background-color: #fff;
    }

    /* Style cho card */
    .card {
        border: 1px solid #e3e6f0;
        border-radius: 16px; /* 1rem = 16px */
        box-shadow: 0 2px 28px 0 rgba(58, 59, 69, 0.15); /* 0.15rem = 2px, 1.75rem = 28px */
        margin-bottom: 16px; /* 1rem = 16px */
    }

    .card-header {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
        padding: 16px; /* 1rem = 16px */
    }

        .card-header h4 {
            margin: 0;
            font-size: 28px; /* 1.75rem = 28px */
            color: black;
        }

    .card-body {
        padding: 20px; /* 1.25rem = 20px */
    }

    /* Style cho table */
    .table th, .table td {
        vertical-align: middle;
        padding: 12px; /* 0.75rem = 12px */
    }

    .table th {
        background-color: #f8f9fc;
        color: #4e73df;
        border-bottom: 2px solid #e3e6f0;
    }

    .table td img {
        width: 50px;
        height: 50px;
        margin-right: 16px; /* 1rem = 16px */
    }

    .table tfoot td {
        font-weight: bold;
    }

    /* Style cho nút "Quay lại" */
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
        padding: 6px 12px; /* 0.375rem = 6px, 0.75rem = 12px */
        font-size: 16px; /* 1rem = 16px */
        border-radius: 6px; /* 0.35rem = 6px */
    }

        .btn-primary:hover {
            background-color: #2e59d9;
            border-color: #2653d4;
        }
</style>
<div class="body-card">
    <h2>Chi tiết đơn hàng</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Thông tin giao hàng</h4>
        </div>
        <div class="card-body">
            <p><strong>Địa chỉ:</strong> @ViewBag.ShippingAddress, @ViewBag.ShippingWard, @ViewBag.ShippingDistrict, @ViewBag.ShippingCity</p>
            <p><strong>Phí vận chuyển:</strong> @ViewBag.ShippingCost.ToString("N0").Replace(",", ".") VNĐ</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.CouponCode))
    {
        <div class="card mb-4">
            <div class="card-header">
                <h4>Thông tin giảm giá</h4>
            </div>
            <div class="card-body">
                <p><strong>Mã giảm giá:</strong> @ViewBag.CouponCode</p>
                <p><strong>Số tiền giảm:</strong> @ViewBag.DiscountAmount.ToString("N0").Replace(",", ".") VNĐ</p>
            </div>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h4>Trạng thái đơn hàng</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Trạng thái hiện tại:</label>
                @if (ViewBag.Status == 1)
                {
                    <span class="badge" style="background-color: #007bff; color: white; border-radius: 5px; padding: 0.25em 0.6em;">Đơn hàng mới</span>
                }
                else if (ViewBag.Status == 2)
                {
                    <span class="badge" style="background-color: #ffc107; color: black; border-radius: 5px; padding: 0.25em 0.6em;">Chờ xác nhận</span>
                }
                else if (ViewBag.Status == 4)
                {
                    <span class="badge" style="background-color: #17a2b8; color: white; border-radius: 5px; padding: 0.25em 0.6em;">Đang giao hàng</span>
                }
                else if (ViewBag.Status == 0)
                {
                    <span class="badge" style="background-color: #28a745; color: white; border-radius: 5px; padding: 0.25em 0.6em;">Đã giao hàng</span>
                }
                else if (ViewBag.Status == 3)
                {
                    <span class="badge" style="background-color: #dc3545; color: white; border-radius: 5px; padding: 0.25em 0.6em;">Đã hủy</span>
                }
                else if (ViewBag.Status == 5)
                {
                    <span class="badge" style="background-color: #ff9800; color: white; border-radius: 5px; padding: 0.25em 0.6em;">Yêu cầu hoàn hàng</span>
                }
                else if (ViewBag.Status == 6)
                {
                    <span class="badge" style="background-color: #673ab7; color: white; border-radius: 5px; padding: 0.25em 0.6em;">Hoàn hàng thành công</span>
                }
                else
                {
                    <span class="badge" style="background-color: #6c757d; color: white; border-radius: 5px; padding: 0.25em 0.6em;">Không xác định</span>
                }
            </div>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Màu sắc</th>
                <th>Kích cỡ</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                decimal subtotal = 0;
            }
            @foreach (var item in Model)
            {
                decimal itemTotal = item.Quantity * item.Price;
                subtotal += itemTotal;
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(item.Product?.Image))
                            {
                                <img src="~/media/products/@item.Product.Image" alt="@item.Product.Name">
                            }
                            <div>
                                <p class="mb-0">@item.Product?.Name</p>
                            </div>
                        </div>
                    </td>
                    <td>@(string.IsNullOrEmpty(item.ColorName) ? "Không có" : item.ColorName)</td>
                    <td>@(string.IsNullOrEmpty(item.SizeName) ? "Không có" : item.SizeName)</td>
                    <td>@item.Price.ToString("N0").Replace(",", ".") VNĐ</td>
                    <td>@item.Quantity</td>
                    <td>@itemTotal.ToString("N0").Replace(",", ".") VNĐ</td>
                    <td>
                        @if (ViewBag.Status == 0)
                        {
                            <a asp-action="ReviewProduct" asp-controller="Account" 
                               asp-route-orderCode="@item.OrderCode" 
                               asp-route-productId="@item.ProductId" 
                               class="btn btn-warning btn-sm">
                                <i class="fas fa-star"></i> Đánh giá
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6" class="text-right"><strong>Tạm tính:</strong></td>
                <td>@subtotal.ToString("N0").Replace(",", ".") VNĐ</td>
            </tr>
            @if (ViewBag.DiscountAmount > 0)
            {
                <tr>
                    <td colspan="6" class="text-right"><strong>Giảm giá:</strong></td>
                    <td>-@ViewBag.DiscountAmount.ToString("N0").Replace(",", ".") VNĐ</td>
                </tr>
            }
            <tr>
                <td colspan="6" class="text-right"><strong>Phí vận chuyển:</strong></td>
                <td>@ViewBag.ShippingCost.ToString("N0").Replace(",", ".") VNĐ</td>
            </tr>
            <tr>
                <td colspan="6" class="text-right"><strong>Tổng cộng:</strong></td>
                <td>@(Math.Max(0, subtotal - ViewBag.DiscountAmount + ViewBag.ShippingCost).ToString("N0").Replace(",", ".")) VNĐ</td>
            </tr>
        </tfoot>
    </table>
    
    @if (ViewBag.Status == 0)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h4>Xác nhận nhận hàng</h4>
            </div>
            <div class="card-body">
                <form asp-action="ConfirmOrderReceived" asp-controller="Account" method="post">
                    <input type="hidden" name="OrderCode" value="@Model.FirstOrDefault()?.OrderCode" />
                    <input type="hidden" name="IsConfirmed" value="true" />
                    <div class="form-group">
                        <label for="CustomerNote">Ghi chú (tùy chọn):</label>
                        <textarea name="CustomerNote" id="CustomerNote" class="form-control" rows="3" placeholder="Nhập ghi chú nếu có..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">
                        <i class="fas fa-check"></i> Xác nhận đã nhận hàng
                    </button>
                </form>
            </div>
        </div>
    }
    
    <a asp-action="History" asp-controller="Account" class="btn btn-primary">Quay lại danh sách đơn hàng</a>
</div>