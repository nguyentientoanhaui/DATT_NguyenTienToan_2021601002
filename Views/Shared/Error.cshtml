@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
}

<div class="container text-center" style="padding: 50px 0;">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <div class="error-icon" style="font-size: 80px; color: #e74c3c; margin-bottom: 30px;">
                    <i class="fa fa-exclamation-circle"></i>
                </div>
                <h1 style="color: #e74c3c; margin-bottom: 20px;">
                    Đã xảy ra lỗi
                </h1>
                <div class="error-details" style="margin-bottom: 30px;">
                    <p style="font-size: 18px; color: #666;">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            @ViewBag.ErrorMessage
                        }
                        else
                        {
                            <text>Rất tiếc, đã xảy ra lỗi trong quá trình xử lý yêu cầu của bạn.</text>
                        }
                    </p>
                    @if (Model.ShowRequestId)
                    {
                        <p style="font-size: 14px; color: #999; margin-top: 10px;">
                            <strong>Mã lỗi:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                </div>
                <div class="error-actions">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg" style="margin-right: 10px;">
                        <i class="fa fa-home"></i> Về trang chủ
                    </a>
                    <a href="javascript:history.back()" class="btn btn-default btn-lg">
                        <i class="fa fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <div class="admin-info" style="margin-top: 40px; padding: 20px; background-color: #f8f9fa; border-radius: 5px;">
                        <h4 style="color: #495057;">Thông tin cho quản trị viên</h4>
                        <p style="font-size: 14px; color: #6c757d;">
                            Để xem thông tin chi tiết về lỗi, hãy bật chế độ Development bằng cách đặt biến môi trường 
                            <strong>ASPNETCORE_ENVIRONMENT</strong> thành <strong>Development</strong> và khởi động lại ứng dụng.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .error-template {
        padding: 40px 15px;
        text-align: center;
    }
    
    .error-template h1 {
        font-size: 36px;
        font-weight: bold;
    }
    
    .error-template .error-details {
        font-size: 16px;
        margin: 20px 0;
    }
    
    .error-template .error-actions {
        margin-top: 15px;
        margin-bottom: 15px;
    }
    
    .error-template .error-actions .btn {
        margin-right: 10px;
        padding: 10px 20px;
    }
    
    .error-template .admin-info {
        text-align: left;
    }
</style>
