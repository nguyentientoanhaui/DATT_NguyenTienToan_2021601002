@model ContactModel

<style>
    /* Custom styling to enhance the contact page */
    .contact-section {
        padding: 40px 0;
    }

    .contact-card {
        border: 1px solid #e3e6f0;
        border-radius: 16px;
        box-shadow: 0 2px 28px 0 rgba(58, 59, 69, 0.15);
        padding: 20px;
        background-color: #fff;
    }

        .contact-card h4 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        .contact-card p {
            margin-bottom: 10px;
            color: #858796;
        }

    .social-icons .btn-social {
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        border-radius: 50%;
        font-size: 16px;
        margin-right: 10px;
        border: 1px solid #ddd;
        color: #666;
        padding: 0;
    }

        .social-icons .btn-social:hover {
            background-color: #4e73df;
            color: white;
            border-color: #4e73df;
        }

    .map-container {
        margin-bottom: 20px;
    }

        .map-container iframe {
            width: 100%;
            height: 400px;
            border: 0;
        }

    .description {
        color: #858796;
        line-height: 1.6;
    }

    .text-warning {
        color: #f0ad4e !important;
    }
</style>

<div class="contact-section">
    <div class="row">
        <!-- Map and Description Section -->
        <div class="col-md-8 col-12 mb-4">
            <div class="map-container">
                @Html.Raw(Model.Map)
            </div>
            <p class="description">@Html.Raw(Model.Description)</p>
        </div>

        <!-- Contact Info Section -->
        <div class="col-md-4 col-12">
            <div class="contact-card mb-4">
                <h4>Liên Hệ</h4>
                <p><i class="fa fa-map-marker-alt me-2"></i> Số 298 Đ. Cầu Diễn, Minh Khai, Bắc Từ Liêm, Hà Nội, Việt Nam</p>
                <p><i class="fa fa-phone-alt me-2"></i> @Model.Phone</p>
                <p><i class="fa fa-envelope me-2"></i> @Model.Email</p>

                <h5 class="text-warning mb-3">SOCIAL NETWORKING</h5>
                <div class="social-icons d-flex gap-2 mb-4">
                    <a class="btn btn-social" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-social" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-social" href="#"><i class="fab fa-youtube"></i></a>
                    <a class="btn btn-social" href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>

                <div class="fb-page"
                     data-href="https://www.facebook.com/ShopeeVN"
                     data-tabs="tin nhắn"
                     data-width="100%"
                     data-height="300"
                     data-small-header="false"
                     data-adapt-container-width="true"
                     data-hide-cover="false"
                     data-show-facepile="true">
                    <blockquote cite="https://www.facebook.com/ShopeeVN" class="fb-xfbml-parse-ignore">
                        <a href="https://www.facebook.com/ShopeeVN">Shopee</a>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Ensure Facebook SDK is loaded for the FB widget -->
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v20.0"></script>
