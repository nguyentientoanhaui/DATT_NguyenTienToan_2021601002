@model ContactModel

<style>
    /* Simple Black and White Hero Section */
    .contact-hero {
        background: linear-gradient(135deg, #000000 0%, #333333 100%);
        color: white;
        padding: 80px 0;
        text-align: center;
    }

    .contact-hero h1 {
        font-size: 3rem;
        font-weight: 300;
        margin-bottom: 1rem;
        letter-spacing: 2px;
    }

    .contact-hero p {
        font-size: 1.2rem;
        opacity: 0.8;
        max-width: 600px;
        margin: 0 auto;
    }

    /* About Section */
    .about-section {
        padding: 60px 0;
        background-color: #ffffff;
    }

    .about-content {
        max-width: 1000px;
        margin: 0 auto;
        text-align: center;
    }

    .about-content h2 {
        font-size: 2.2rem;
        color: #000000;
        margin-bottom: 30px;
        font-weight: 300;
        letter-spacing: 1px;
    }

    .about-content p {
        font-size: 1rem;
        color: #333333;
        line-height: 1.7;
        margin-bottom: 25px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .values {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        margin: 40px 0;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
    }

    .value-item {
        padding: 25px 20px;
        border: 1px solid #e0e0e0;
        background: white;
        transition: all 0.3s ease;
        text-align: center;
    }

    .value-item:hover {
        border-color: #000000;
        transform: translateY(-3px);
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

    .value-item h3 {
        font-size: 1.3rem;
        color: #000000;
        margin-bottom: 15px;
        font-weight: 400;
        letter-spacing: 1px;
    }

    .value-item p {
        font-size: 0.9rem;
        color: #555555;
        line-height: 1.5;
        margin-bottom: 0;
    }

    .closing {
        font-size: 1.2rem !important;
        font-weight: 500;
        color: #000000 !important;
        margin-top: 40px !important;
    }

    /* Founder Section */
    .founder-section {
        margin-top: 50px;
        padding: 50px 0;
        border-top: 1px solid #e0e0e0;
        background: #fafafa;
    }

    .founder-content {
        display: flex;
        align-items: center;
        gap: 50px;
        max-width: 1000px;
        margin: 0 auto;
    }

    .founder-image {
        flex: 0 0 280px;
    }

    .founder-image img {
        width: 100%;
        height: auto;
        border: 1px solid #e0e0e0;
        border-radius: 0;
        object-fit: cover;
        transition: all 0.3s ease;
        filter: grayscale(100%);
    }

    .founder-image img:hover {
        border-color: #000000;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        filter: grayscale(0%);
    }

    .founder-info {
        flex: 1;
        text-align: left;
    }

    .founder-info h3 {
        font-size: 1.8rem;
        color: #000000;
        margin-bottom: 8px;
        font-weight: 400;
        letter-spacing: 1px;
    }

    .founder-title {
        font-size: 1rem;
        color: #666666;
        margin-bottom: 25px;
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    .founder-quote {
        font-size: 0.95rem;
        color: #444444;
        line-height: 1.6;
        font-style: italic;
        margin-bottom: 0;
        max-width: 500px;
    }

    @@media (max-width: 768px) {
        .contact-hero h1 {
            font-size: 2rem;
        }
        
        .contact-hero p {
            font-size: 1rem;
        }

        .about-section {
            padding: 40px 0;
        }

        .about-content h2 {
            font-size: 1.8rem;
        }

        .values {
            grid-template-columns: 1fr;
            gap: 20px;
            margin: 30px 0;
        }

        .value-item {
            padding: 20px 15px;
        }

        .founder-section {
            padding: 40px 0;
        }

        .founder-content {
            flex-direction: column;
            gap: 30px;
            text-align: center;
        }

        .founder-image {
            flex: none;
            width: 250px;
            margin: 0 auto;
        }

        .founder-info {
            text-align: center;
        }

        .founder-info h3 {
            font-size: 1.5rem;
        }

        .founder-quote {
            max-width: none;
        }
    }
</style>

<!-- Hero Section -->
<div class="contact-hero">
    <div class="container">
        <h1>AURUM WATCHES</h1>
        <p>Nơi Thời Gian Kể Lại Câu Chuyện</p>
    </div>
</div>

<!-- About Section -->
<div class="about-section">
    <div class="container">
        <div class="about-content">
            <h2>VỀ AURUM WATCHES</h2>
            <p>Chào mừng bạn đến với Aurum Watches - nơi những chiếc đồng hồ được trân trọng đúng với giá trị của chúng. Chúng tôi không chỉ là một cửa hàng, mà là một giấc mơ đã thành hiện thực.</p>
            
            <p>Mỗi chiếc đồng hồ với chúng tôi đều là một tác phẩm nghệ thuật có trái tim, một vật phẩm kể lại lịch sử, một di sản được truyền qua nhiều thế hệ. Chúng tôi cam kết mang đến cho bạn những sản phẩm chất lượng cao với ba giá trị cốt lõi:</p>
            
            <div class="values">
                <div class="value-item">
                    <h3>NIỀM TIN</h3>
                    <p>Từng chiếc đồng hồ đều được đội ngũ chuyên gia kiểm tra, thẩm định bằng cả trái tim và kiến thức, đảm bảo tính xác thực tuyệt đối.</p>
                </div>
                
                <div class="value-item">
                    <h3>TRUNG THỰC</h3>
                    <p>Chúng tôi cam kết về sự trung thực trong mọi thông tin. Từ tình trạng sản phẩm đến giá trị thực, mọi điều đều được công khai.</p>
                </div>
                
                <div class="value-item">
                    <h3>MINH BẠCH</h3>
                    <p>Sự minh bạch trong mọi quy trình giúp bạn hoàn toàn yên tâm. Mức giá được niêm yết rõ ràng, chính sách bảo hành cụ thể.</p>
                </div>
            </div>
            
            <p class="closing">Hãy để Aurum Watches là điểm đến tin cậy của bạn, nơi bạn không chỉ mua một chiếc đồng hồ, mà còn tìm thấy một người bạn đồng hành, viết nên câu chuyện của riêng mình.</p>
            
            <!-- Founder Section -->
            <div class="founder-section">
                <div class="founder-content">
                    <div class="founder-image">
                        <img src="~/images/founder/pham-gia-vinh.jpg" alt="Phạm Gia Vinh - Nhà sáng lập Aurum Watches" />
                    </div>
                    <div class="founder-info">
                        <h3>Phạm Gia Vinh</h3>
                        <p class="founder-title">Nhà sáng lập | Aurum Watches</p>
                        <p class="founder-quote">"Mỗi chiếc đồng hồ không chỉ là một công cụ đo thời gian mà còn là biểu tượng của phong cách và đẳng cấp. Chúng tôi cam kết mang đến cho bạn những sản phẩm chất lượng cao với sự tận tâm và chuyên nghiệp."</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

