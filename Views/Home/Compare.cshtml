<script>
    // Wait for jQuery to be available
    function waitForJQuery(callback) {
        if (typeof $ !== 'undefined') {
            callback();
        } else {
            setTimeout(function() {
                waitForJQuery(callback);
            }, 100);
        }
    }

    waitForJQuery(function() {
        $(document).ready(function() {
            // Responsive table
            if ($(window).width() < 768) {
                $('#compareTable').addClass('table-responsive');
            }
            
            // Handle remove button clicks
            $(document).on('click', '.btn-remove-compare', function() {
                const compareId = $(this).data('product-id');
                const productName = $(this).data('product-name');
                console.log('Remove button clicked:', compareId, productName);
                removeFromCompare(compareId, productName);
            });
        });
    });

    // Function to remove product from comparison using AJAX
    function removeFromCompare(compareId, productName) {
        if (confirm(`Bạn có chắc muốn xóa sản phẩm "${productName}" khỏi danh sách so sánh?`)) {
            performDelete(compareId, productName);
        }
    }

    // Function to perform the actual deletion
    function performDelete(compareId, productName) {
        console.log('performDelete called with:', compareId, productName);
        
        // Show loading state
        const button = $(`button[data-product-id="${compareId}"]`);
        console.log('Button found:', button.length);
        
        if (button.length === 0) {
            console.error('Button not found!');
            showNotification('Không tìm thấy nút xóa!', 'error');
            return;
        }
        
        const originalContent = button.html();
        button.html('<i class="fas fa-spinner fa-spin"></i>');
        button.prop('disabled', true);

        console.log('Sending AJAX request...');
        $.ajax({
            url: '@Url.Action("DeleteCompare", "Home")',
            type: 'POST',
            data: { Id: compareId },
            success: function(response) {
                console.log('AJAX success, response:', response);
                if (response.success) {
                    console.log('Delete successful, removing from DOM...');
                    
                    // Show success message
                    showNotification('Sản phẩm đã được xóa khỏi danh sách so sánh thành công!', 'success');
                    
                    // Find the product cell and remove it
                    const productCell = button.closest('td');
                    const columnIndex = productCell.index();
                    console.log('Column index to remove:', columnIndex);
                    
                    // Remove this cell from all rows
                    $('tbody tr').each(function() {
                        const cell = $(this).find('td').eq(columnIndex);
                        console.log('Removing cell:', cell.length);
                        cell.remove();
                    });
                    
                    console.log('Cells removed, checking remaining...');
                    // Check if no products left
                    const remainingCells = $('tbody tr:first td').length;
                    console.log('Remaining cells:', remainingCells);
                    
                    if (remainingCells <= 1) {
                        console.log('No products left, redirecting...');
                        setTimeout(function() {
                            window.location.href = '@Url.Action("Index", "Home")';
                        }, 1500);
                    }
                } else {
                    console.log('Delete failed:', response.message);
                    showNotification(response.message || 'Có lỗi xảy ra khi xóa sản phẩm!', 'error');
                    // Restore button
                    button.html(originalContent);
                    button.prop('disabled', false);
                }
            },
            error: function(xhr, status, error) {
                console.error('AJAX error:', status, error);
                console.error('Response text:', xhr.responseText);
                showNotification('Có lỗi xảy ra khi xóa sản phẩm!', 'error');
                // Restore button
                button.html(originalContent);
                button.prop('disabled', false);
            }
        });
    }

    // Function to clear all compare products
    function clearAllCompare() {
        if (confirm('Bạn có chắc muốn xóa tất cả sản phẩm khỏi danh sách so sánh?')) {
            performClearAll();
        }
    }

    // Function to perform clear all
    function performClearAll() {
        $.ajax({
            url: '@Url.Action("ClearAllCompare", "Home")',
            type: 'POST',
            success: function(response) {
                if (response.success) {
                    showNotification('Đã xóa tất cả sản phẩm khỏi danh sách so sánh!', 'success');
                    setTimeout(function() {
                        window.location.href = '@Url.Action("Index", "Home")';
                    }, 1500);
                } else {
                    showNotification(response.message || 'Có lỗi xảy ra khi xóa danh sách so sánh!', 'error');
                }
            },
            error: function() {
                showNotification('Có lỗi xảy ra khi xóa danh sách so sánh!', 'error');
            }
        });
    }



    // Function to show notifications
    function showNotification(message, type) {
        // Sử dụng SweetAlert nếu có, nếu không thì dùng alert đơn giản
        if (typeof Swal !== 'undefined') {
            let icon = 'info';
            let title = 'Thông báo';
            
            if (type === 'success') {
                icon = 'success';
                title = 'Thành công';
            } else if (type === 'error') {
                icon = 'error';
                title = 'Lỗi';
            } else if (type === 'warning') {
                icon = 'warning';
                title = 'Cảnh báo';
            }
            
            Swal.fire({
                title: title,
                text: message,
                icon: icon,
                timer: type === 'success' ? 2000 : 3000,
                showConfirmButton: false,
                toast: true,
                position: 'top-end'
            });
        } else {
            // Fallback: sử dụng alert đơn giản
            alert(message);
        }
    }
</script>