@{
    ViewData["Title"] = "Test Wishlist";
}

<div class="container mt-5">
    <h2>Test Wishlist Functionality</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Test Add to Wishlist</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="productId" class="form-label">Product ID:</label>
                        <input type="number" class="form-control" id="productId" value="1" min="1">
                    </div>
                    <button type="button" class="btn btn-primary" onclick="testAddToWishlist()">
                        <i class="fas fa-heart"></i> Add to Wishlist
                    </button>
                    <div id="addResult" class="mt-3"></div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Debug Information</h5>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-info" onclick="getDebugInfo()">
                        <i class="fas fa-info-circle"></i> Get Debug Info
                    </button>
                    <div id="debugResult" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Current Wishlist</h5>
                </div>
                <div class="card-body">
                    <a href="/Home/Wishlist" class="btn btn-success">
                        <i class="fas fa-list"></i> View Wishlist
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<script>
    function testAddToWishlist() {
        const productId = document.getElementById('productId').value;
        const resultDiv = document.getElementById('addResult');
        
        resultDiv.innerHTML = '<div class="alert alert-info">Đang thêm vào wishlist...</div>';
        
        // Get the anti-forgery token
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
        
        const formData = new FormData();
        formData.append('Id', productId);
        formData.append('__RequestVerificationToken', token);
        
        console.log('Sending request with:', {
            productId: productId,
            token: token
        });
        
        fetch('/Home/AddWishList', {
            method: 'POST',
            body: formData
        })
        .then(response => {
            console.log('Response status:', response.status);
            return response.json();
        })
        .then(data => {
            console.log('Response data:', data);
            if (data.success) {
                resultDiv.innerHTML = `<div class="alert alert-success">✅ ${data.message}</div>`;
            } else {
                resultDiv.innerHTML = `<div class="alert alert-danger">❌ ${data.message}</div>`;
            }
        })
        .catch(error => {
            console.error('Error:', error);
            resultDiv.innerHTML = `<div class="alert alert-danger">❌ Lỗi: ${error.message}</div>`;
        });
    }
    
    function getDebugInfo() {
        const resultDiv = document.getElementById('debugResult');
        resultDiv.innerHTML = '<div class="alert alert-info">Đang lấy thông tin debug...</div>';
        
        fetch('/Home/DebugWishlist')
        .then(response => response.json())
        .then(data => {
            console.log('Debug info:', data);
            if (data.success) {
                resultDiv.innerHTML = `
                    <div class="alert alert-success">
                        <h6>Debug Information:</h6>
                        <pre>${JSON.stringify(data.debugInfo, null, 2)}</pre>
                    </div>
                `;
            } else {
                resultDiv.innerHTML = `<div class="alert alert-danger">❌ ${data.error}</div>`;
            }
        })
        .catch(error => {
            console.error('Error:', error);
            resultDiv.innerHTML = `<div class="alert alert-danger">❌ Lỗi: ${error.message}</div>`;
        });
    }
    
    // Auto-load debug info on page load
    document.addEventListener('DOMContentLoaded', function() {
        getDebugInfo();
    });
</script>
