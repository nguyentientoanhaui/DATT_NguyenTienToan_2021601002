@{
    ViewData["Title"] = "Test MoMo Payment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Test MoMo Payment Integration</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5>Thông tin test MoMo</h5>
                        <ul class="mb-0">
                            <li><strong>Partner Code:</strong> MOMO</li>
                            <li><strong>Environment:</strong> Sandbox</li>
                            <li><strong>API URL:</strong> https://test-payment.momo.vn/gw_payment/transactionProcessor</li>
                            <li><strong>Request Type:</strong> captureMoMoWallet</li>
                        </ul>
                    </div>

                    <!-- Form thanh toán MoMo -->
                    <form method="POST" asp-action="CreatePaymentUrl" asp-controller="Payment">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="FullName">Tên khách hàng:</label>
                                    <input type="text" class="form-control" name="FullName" value="@User.Identity?.Name" required />
                                </div>
                                <div class="form-group mb-3">
                                    <label for="Amount">Số tiền (VND):</label>
                                    <input type="number" class="form-control" name="Amount" value="50000" min="1000" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="OrderInfo">Nội dung thanh toán:</label>
                                    <input type="text" class="form-control" name="OrderInfo" value="Thanh toán đặt hàng qua Momo tại Shopping Demo" required />
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <button class="btn btn-danger btn-lg" name="PayUrl" type="submit">
                                <i class="fas fa-credit-card"></i> Pay with MoMo
                            </button>
                        </div>
                    </form>

                    <div class="mt-4">
                        <h5>MoMo Test Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Test Account</h6>
                                    </div>
                                    <div class="card-body">
                                        <p><strong>Phone:</strong> 0123456789</p>
                                        <p><strong>Email:</strong> test@example.com</p>
                                        <p><strong>Amount:</strong> 50,000 VND</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">Payment Methods</h6>
                                    </div>
                                    <div class="card-body">
                                        <ul class="mb-0">
                                            <li>MoMo Wallet</li>
                                            <li>Bank Transfer</li>
                                            <li>QR Code</li>
                                            <li>ATM Card</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>