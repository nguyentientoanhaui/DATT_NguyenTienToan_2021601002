@{
    ViewData["Title"] = "Fix User Roles";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Fix User Roles</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }

    @if (ViewBag.Results != null)
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Role Fix Results</h6>
            </div>
            <div class="card-body">
                @foreach (var result in ViewBag.Results)
                {
                    <p class="mb-1">@result</p>
                }
            </div>
        </div>

        <div class="alert alert-success">
            <strong>Success!</strong> User roles have been fixed. You can now:
            <ul class="mt-2">
                <li>Login with admin@arum.com / Admin123!</li>
                <li>Access admin panel at /Admin/Dashboard</li>
                <li>Manage users and roles</li>
            </ul>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Next Steps</h6>
        </div>
        <div class="card-body">
            <p>After fixing the roles, you should:</p>
            <ol>
                <li>Login with admin credentials</li>
                <li>Go to Admin Panel</li>
                <li>Check User Management to verify roles</li>
                <li>Remove this temporary fix page for security</li>
            </ol>
            
            <div class="mt-3">
                <a href="/Account/Login" class="btn btn-primary">Go to Login</a>
                <a href="/Admin/Dashboard" class="btn btn-success">Go to Admin Panel</a>
            </div>
        </div>
    </div>
</div>
