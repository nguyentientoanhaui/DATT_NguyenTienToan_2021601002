@using Shopping_Demo.Areas.Admin.Models.ViewModels
@model IEnumerable<UserWithRoleViewModel>

@{
    ViewData["title"] = "Danh sách người dùng";
}

<style>
    .page-header {
        background: var(--white);
        padding: 1.5rem;
        border-radius: 0;
        border: none;
        margin-bottom: 1.5rem;
    }

    .page-title {
        color: var(--primary-black);
        font-weight: 600;
        font-size: 1.5rem;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .btn-primary {
        background: transparent;
        color: var(--primary-black);
        border: 1px solid var(--border-color);
        border-radius: 0;
        font-weight: 600;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        transition: all 0.2s ease;
    }

    .btn-primary:hover {
        background: var(--light-gray);
        color: var(--primary-black);
        border: 1px solid var(--border-color);
        text-decoration: none;
    }

    .delete-all-btn {
        background: transparent;
        color: var(--primary-black);
        border: 1px solid var(--border-color);
        padding: 8px 16px;
        border-radius: 0;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        transition: all 0.2s ease;
    }

    .delete-all-btn:hover {
        background: var(--light-gray);
        color: var(--primary-black);
        text-decoration: none;
    }

    .table {
        background: var(--white);
        border: none;
        border-radius: 0;
    }

    .table th {
        background: var(--white);
        color: var(--primary-black);
        font-weight: 600;
        border: none;
        border-bottom: 1px solid var(--border-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .table td {
        color: var(--primary-black);
        font-weight: 600;
        border: none;
        border-bottom: 1px solid var(--border-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .btn-warning {
        background: transparent;
        color: var(--primary-black);
        border: 1px solid var(--border-color);
        border-radius: 0;
        font-weight: 600;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .btn-warning:hover {
        background: var(--light-gray);
        color: var(--primary-black);
        border: 1px solid var(--border-color);
    }

    .btn-success {
        background: transparent;
        color: var(--primary-black);
        border: 1px solid var(--border-color);
        border-radius: 0;
        font-weight: 600;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .btn-success:hover {
        background: var(--light-gray);
        color: var(--primary-black);
        border: 1px solid var(--border-color);
    }

    .btn-danger {
        background: transparent;
        color: var(--primary-black);
        border: 1px solid var(--border-color);
        border-radius: 0;
        font-weight: 600;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .btn-danger:hover {
        background: var(--light-gray);
        color: var(--primary-black);
        border: 1px solid var(--border-color);
    }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="page-title">Danh sách người dùng</h1>
        <div class="action-buttons">
            <a asp-action="Create" asp-controller="User" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Thêm người dùng
            </a>
            <div class="btn-group">
                <a href="@Url.Action("ExportUsers", "Export", new { format = "excel" })" class="btn btn-success btn-sm">
                    <i class="fas fa-file-excel"></i> Xuất Excel
                </a>
                <a href="@Url.Action("ExportUsers", "Export", new { format = "csv" })" class="btn btn-info btn-sm">
                    <i class="fas fa-file-csv"></i> Xuất CSV
                </a>
            </div>
            <a href="@Url.Action("DeleteAllUsersExceptAdmin", "User")" class="delete-all-btn" 
               onclick="return confirm('Bạn có chắc chắn muốn xóa TẤT CẢ tài khoản (trừ admin@aurum.com)? Hành động này không thể hoàn tác!')">
                <i class="fas fa-trash"></i>
                Xóa tất cả user
            </a>
        </div>
    </div>
</div>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên đăng nhập</th>
            <th scope="col">Email</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Quyền</th>
            <th scope="col">Trạng thái</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var isLocked = item.User.LockoutEnd != null && item.User.LockoutEnd > DateTime.UtcNow;
            <tr>
                <td>@item.User.Id</td>
                <td>@item.User.UserName</td>
                <td>@item.User.Email</td>
                <td>@item.User.PhoneNumber</td>
                <td>@item.RoleName</td>
                <td>@(isLocked ? "Đã khóa" : "Đang hoạt động")</td>
                <td>
                    @if (item.User.Id != ViewBag.loggedInUser)
                    {
                        if (item.RoleName != "Admin")
                        {
                            <a asp-action="Edit"
                               class="btn btn-warning btn-sm"
                               asp-controller="User"
                               asp-route-Id="@item.User.Id">Sửa</a>

                            <a asp-action="ToggleLockout"
                               class="btn @(isLocked ? "btn-success" : "btn-danger") btn-sm confirmAction"
                               asp-controller="User"
                               asp-route-Id="@item.User.Id">
                                @(isLocked ? "Mở khóa" : "Khóa")
                            </a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.confirmAction').click(function(e) {
                var isLocked = $(this).text().trim() === "Khóa";
                var confirmMessage = isLocked
                    ? "Bạn có chắc muốn khóa tài khoản này không?"
                    : "Bạn có chắc muốn mở khóa tài khoản này không?";

                if (!confirm(confirmMessage)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}