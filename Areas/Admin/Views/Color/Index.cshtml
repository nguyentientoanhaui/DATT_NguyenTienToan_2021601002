@model IEnumerable<ColorModel>
@{
    ViewData["title"] = "Danh sách màu sắc";
}

<h3>Danh sách màu sắc</h3>
<a asp-action="Create" class="btn btn-primary mb-3">Thêm màu sắc mới</a>

<table class="table table-bordered" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Tên màu</th>
            <th>Mã màu</th>
            <th>Xem trước</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Code</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Code))
                    {
                        <div style="width: 50px; height: 30px; background-color: @item.Code; border: 1px solid #ccc;"></div>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm confirmDeletion">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>