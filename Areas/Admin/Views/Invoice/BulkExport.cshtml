@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Xuất hóa đơn hàng loạt";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-file-export"></i> Xuất hóa đơn hàng loạt
                    </h4>
                    <a href="@Url.Action("Index", "Order")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>

                <div class="card-body">
                    <!-- Filters -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-filter"></i> Bộ lọc</h5>
                        </div>
                        <div class="card-body">
                            <form method="get" id="filterForm">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label class="form-label">Trạng thái</label>
                                        <select name="status" class="form-select">
                                            <option value="">Tất cả</option>
                                            <option value="0" selected="@(ViewBag.Status == "0")">Đã giao hàng</option>
                                            <option value="1" selected="@(ViewBag.Status == "1")">Đơn hàng mới</option>
                                            <option value="2" selected="@(ViewBag.Status == "2")">Chờ xác nhận</option>
                                            <option value="3" selected="@(ViewBag.Status == "3")">Đã hủy</option>
                                            <option value="4" selected="@(ViewBag.Status == "4")">Đang giao hàng</option>
                                            <option value="5" selected="@(ViewBag.Status == "5")">Yêu cầu hoàn hàng</option>
                                            <option value="6" selected="@(ViewBag.Status == "6")">Hoàn hàng thành công</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Từ ngày</label>
                                        <input type="date" name="dateFrom" class="form-control" value="@ViewBag.DateFrom">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Đến ngày</label>
                                        <input type="date" name="dateTo" class="form-control" value="@ViewBag.DateTo">
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">&nbsp;</label>
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-search"></i> Lọc
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Export Actions -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-download"></i> Xuất file</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="d-grid">
                                        <button type="button" class="btn btn-success" onclick="exportSelected('excel')">
                                            <i class="fas fa-file-excel"></i> Xuất Excel đã chọn
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-grid">
                                        <button type="button" class="btn btn-info" onclick="selectAll()">
                                            <i class="fas fa-check-square"></i> Chọn tất cả
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Orders Table -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-list"></i> Danh sách đơn hàng 
                                <span class="badge bg-primary">@ViewBag.TotalCount đơn hàng</span>
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            @if (Model != null && Model.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover mb-0">
                                        <thead class="table-dark">
                                            <tr>
                                                <th width="5%">
                                                    <input type="checkbox" id="selectAllCheckbox" onchange="toggleAll()">
                                                </th>
                                                <th width="15%">Mã đơn hàng</th>
                                                <th width="15%">Ngày tạo</th>
                                                <th width="15%">Khách hàng</th>
                                                <th width="15%">Trạng thái</th>
                                                <th width="15%">Tổng tiền</th>
                                                <th width="20%">Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" class="order-checkbox" value="@order.OrderCode">
                                                    </td>
                                                    <td>
                                                        <strong>@order.OrderCode</strong>
                                                    </td>
                                                    <td>@order.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>@order.UserName</td>
                                                    <td>
                                                        @switch (order.Status)
                                                        {
                                                            case 0: <span class="badge bg-success">Đã giao hàng</span>; break;
                                                            case 1: <span class="badge bg-primary">Đơn hàng mới</span>; break;
                                                            case 2: <span class="badge bg-warning">Chờ xác nhận</span>; break;
                                                            case 3: <span class="badge bg-danger">Đã hủy</span>; break;
                                                            case 4: <span class="badge bg-info">Đang giao hàng</span>; break;
                                                            case 5: <span class="badge bg-warning">Yêu cầu hoàn hàng</span>; break;
                                                            case 6: <span class="badge bg-secondary">Hoàn hàng thành công</span>; break;
                                                            default: <span class="badge bg-secondary">Không xác định</span>; break;
                                                        }
                                                    </td>
                                                    <td class="text-end">
                                                        <strong>@order.TotalAmount.ToString("N0")₫</strong>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a href="@Url.Action("Index", "Invoice", new { orderCode = order.OrderCode })" 
                                                               class="btn btn-outline-primary" title="Xem hóa đơn">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a href="@Url.Action("Download", "Invoice", new { orderCode = order.OrderCode, format = "pdf" })" 
                                                               class="btn btn-outline-danger" title="Tải PDF">
                                                                <i class="fas fa-file-pdf"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                @if (ViewBag.TotalPages > 1)
                                {
                                    <div class="card-footer">
                                        <nav aria-label="Page navigation">
                                            <ul class="pagination justify-content-center mb-0">
                                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                                {
                                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                        <a class="page-link" href="?page=@i&pageSize=@ViewBag.PageSize&status=@ViewBag.Status&dateFrom=@ViewBag.DateFrom&dateTo=@ViewBag.DateTo">@i</a>
                                                    </li>
                                                }
                                            </ul>
                                        </nav>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Không có đơn hàng nào</h5>
                                    <p class="text-muted">Hãy thử thay đổi bộ lọc để tìm kiếm đơn hàng</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleAll() {
            const selectAll = document.getElementById('selectAllCheckbox');
            const checkboxes = document.querySelectorAll('.order-checkbox');
            
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });
        }

        function selectAll() {
            const checkboxes = document.querySelectorAll('.order-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = true;
            });
            document.getElementById('selectAllCheckbox').checked = true;
        }

        function exportSelected(format) {
            const selectedOrders = Array.from(document.querySelectorAll('.order-checkbox:checked'))
                .map(checkbox => checkbox.value);

            if (selectedOrders.length === 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Cảnh báo!',
                    text: 'Vui lòng chọn ít nhất một đơn hàng để xuất'
                });
                return;
            }

            // Show loading
            Swal.fire({
                title: 'Đang xuất file...',
                text: 'Vui lòng chờ',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Create form and submit
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportMultiple", "Invoice")';

            // Add order codes
            selectedOrders.forEach(orderCode => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'orderCodes';
                input.value = orderCode;
                form.appendChild(input);
            });

            // Add format
            const formatInput = document.createElement('input');
            formatInput.type = 'hidden';
            formatInput.name = 'format';
            formatInput.value = format;
            form.appendChild(formatInput);

            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);

            // Close loading after a delay
            setTimeout(() => {
                Swal.close();
            }, 2000);
        }
    </script>
}
