            </nav>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Top Navbar -->
        <div class="top-navbar">
            <div class="d-flex align-items-center">
                <h4 class="mb-0">Dashboard</h4>
            </div>
            <div class="user-info">
                <span class="admin-badge">Admin</span>
                <span>Chào mừng, Administrator!</span>
