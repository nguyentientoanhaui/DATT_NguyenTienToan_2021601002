@model Shopping_Demo.Models.StatisticalModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-black: #000000;
        --secondary-black: #1a1a1a;
        --dark-gray: #2d2d2d;
        --medium-gray: #666666;
        --light-gray: #f5f5f5;
        --white: #ffffff;
        --accent-gray: #e0e0e0;
        --border-color: #e8e8e8;
        --shadow-light: rgba(0, 0, 0, 0.05);
        --soft-blue: #4a90e2;
        --soft-gray: #8e8e93;
    }

    .dashboard-container {
        background: var(--white);
        min-height: 100vh;
        padding: 1.5rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        background: var(--white);
        padding: 1.5rem;
        border-radius: 0;
        border: none;
        margin-bottom: 1.5rem;
    }

    .page-title {
        color: var(--primary-black);
        font-weight: 600;
        font-size: 1.5rem;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .generate-report-btn {
        background: transparent;
        color: var(--primary-black);
        border: none;
        padding: 8px 16px;
        border-radius: 0;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        transition: all 0.2s ease;
    }

    .generate-report-btn:hover {
        background: transparent;
        color: var(--primary-black);
        font-weight: 600;
    }

    .stats-card {
        background: var(--white);
        border: none;
        border-radius: 0;
        margin-bottom: 1rem;
    }

    .stats-card .card-body {
        padding: 1.5rem;
    }

    .stats-label {
        color: var(--primary-black);
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .stats-value {
        color: var(--primary-black);
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .stats-icon {
        font-size: 2rem;
        color: var(--primary-black);
        opacity: 0.8;
    }

    .chart-card {
        background: var(--white);
        border: none;
        border-radius: 0;
        margin-bottom: 1.5rem;
    }

    .chart-card .card-header {
        background: var(--white);
        border-bottom: none;
        padding: 1rem 1.5rem;
    }

    .chart-card .card-header h6 {
        color: var(--primary-black);
        font-weight: 600;
        margin: 0;
        font-size: 1rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .chart-card .card-body {
        padding: 1.5rem;
    }

    .progress-card {
        background: var(--white);
        border: none;
        border-radius: 0;
        margin-bottom: 1.5rem;
    }

    .progress-card .card-header {
        background: var(--white);
        border-bottom: none;
        padding: 1rem 1.5rem;
    }

    .progress-card .card-header h6 {
        color: var(--primary-black);
        font-weight: 600;
        margin: 0;
        font-size: 1rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .progress-card .card-body {
        padding: 1.5rem;
    }

    .progress-item {
        margin-bottom: 1rem;
    }

    .progress-item:last-child {
        margin-bottom: 0;
    }

    .progress-label {
        color: var(--primary-black);
        font-weight: 600;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .progress-value {
        color: var(--primary-black);
        font-weight: 600;
    }

    .progress {
        height: 6px;
        background-color: var(--light-gray);
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-bar {
        background: var(--primary-black);
        border-radius: 3px;
    }

    .chart-area {
        height: 300px;
        position: relative;
    }

    .chart-pie {
        height: 250px;
        position: relative;
    }

    .status-legend {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
        margin-top: 1rem;
    }

    .status-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--primary-black);
        font-weight: 600;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--primary-black);
    }

    .status-dot.green { background: #4CAF50; }
    .status-dot.blue { background: #2196F3; }
    .status-dot.orange { background: #FF9800; }
    .status-dot.red { background: #F44336; }

    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 1rem;
        }
        
        .page-header {
            padding: 1rem;
        }
        
        .page-title {
            font-size: 1.25rem;
        }
        
        .stats-card .card-body {
            padding: 1rem;
        }
        
        .chart-card .card-body {
            padding: 1rem;
        }
    }
</style>

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="page-title">Aurum Dashboard</h1>
            <a href="#" class="generate-report-btn">
                <i class="fas fa-download"></i>
                Generate Report
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-label">Tổng đồng hồ</div>
                            <div class="stats-value">@ViewBag.CountProduct</div>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-label">Tổng đơn hàng</div>
                            <div class="stats-value">@ViewBag.CountOrder</div>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-label">Thương hiệu</div>
                            <div class="stats-value">@ViewBag.CountBrand</div>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-crown"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-label">Khách hàng</div>
                            <div class="stats-value">@ViewBag.CountUser</div>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row">
        <!-- Area Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="chart-card">
                <div class="card-header">
                    <h6>Thống kê đơn hàng</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="chart-card">
                <div class="card-header">
                    <h6>Trạng thái đơn hàng</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie">
                        <canvas id="myPieChart"></canvas>
                    </div>
                    <div class="status-legend">
                        <div class="status-item">
                            <div class="status-dot green"></div>
                            <span>Đã giao hàng: 12</span>
                        </div>
                        <div class="status-item">
                            <div class="status-dot blue"></div>
                            <span>Đơn hàng mới: 19</span>
                        </div>
                        <div class="status-item">
                            <div class="status-dot orange"></div>
                            <span>Chờ xác nhận: 3</span>
                        </div>
                        <div class="status-item">
                            <div class="status-dot red"></div>
                            <span>Đã hủy: 5</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Progress Stats -->
    <div class="row">
        <div class="col-lg-6">
            <div class="progress-card">
                <div class="card-header">
                    <h6>Thống kê đồng hồ</h6>
                </div>
                <div class="card-body">
                    <div class="progress-item">
                        <div class="progress-label">
                            <span>Danh mục</span>
                            <span class="progress-value">@ViewBag.CountCategory</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 20%"></div>
                        </div>
                    </div>

                    <div class="progress-item">
                        <div class="progress-label">
                            <span>Đồng hồ mới</span>
                            <span class="progress-value">@(ViewBag.CountProduct * 0.6)</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 60%"></div>
                        </div>
                    </div>

                    <div class="progress-item">
                        <div class="progress-label">
                            <span>Đồng hồ đã sử dụng</span>
                            <span class="progress-value">@(ViewBag.CountProduct * 0.3)</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 30%"></div>
                        </div>
                    </div>

                    <div class="progress-item">
                        <div class="progress-label">
                            <span>Vintage</span>
                            <span class="progress-value">@(ViewBag.CountProduct * 0.1)</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 10%"></div>
                        </div>
                    </div>

                    <div class="progress-item">
                        <div class="progress-label">
                            <span>Phiếu giảm giá</span>
                            <span class="progress-value">@ViewBag.CountCoupon</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Area Chart
        var ctx = document.getElementById("myAreaChart");
        var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
                datasets: [{
                    label: "Earnings",
                    lineTension: 0.3,
                    backgroundColor: "rgba(54, 162, 235, 0.2)",
                    borderColor: "rgba(54, 162, 235, 1)",
                    pointRadius: 4,
                    pointBackgroundColor: "rgba(54, 162, 235, 1)",
                    pointBorderColor: "rgba(255, 255, 255, 1)",
                    pointBorderWidth: 2,
                    pointHoverRadius: 6,
                    pointHoverBackgroundColor: "rgba(54, 162, 235, 1)",
                    pointHoverBorderColor: "rgba(255, 255, 255, 1)",
                    pointHitRadius: 10,
                    data: [0, 10000, 5000, 15000, 10000, 20000, 15000, 25000, 20000, 30000, 25000, 40000],
                }],
            },
            options: {
                maintainAspectRatio: false,
                layout: {
                    padding: {
                        left: 10,
                        right: 25,
                        top: 25,
                        bottom: 0
                    }
                },
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'date'
                        },
                        gridLines: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            maxTicksLimit: 7,
                            fontColor: '#666666'
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            maxTicksLimit: 5,
                            padding: 10,
                            fontColor: '#666666',
                            callback: function(value, index, values) {
                                return '$' + number_format(value);
                            }
                        },
                        gridLines: {
                            color: "#e8e8e8",
                            zeroLineColor: "#e8e8e8",
                            drawBorder: false,
                            borderDash: [2],
                            zeroLineBorderDash: [2]
                        }
                    }],
                },
                legend: {
                    display: false
                },
                tooltips: {
                    backgroundColor: "#ffffff",
                    bodyFontColor: "#666666",
                    titleMarginBottom: 10,
                    titleFontColor: '#000000',
                    titleFontSize: 14,
                    borderColor: '#e8e8e8',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    intersect: false,
                    mode: 'index',
                    caretPadding: 10,
                    callbacks: {
                        label: function(tooltipItem, chart) {
                            var datasetLabel = chart.datasets[tooltipItem.datasetIndex].label || '';
                            return datasetLabel + ': $' + number_format(tooltipItem.yLabel);
                        }
                    }
                }
            }
        });

        // Pie Chart
        var ctx = document.getElementById("myPieChart");
        var myPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ["Đã giao hàng", "Đơn hàng mới", "Chờ xác nhận", "Đã hủy"],
                datasets: [{
                    data: [12, 19, 3, 5],
                    backgroundColor: ['#4CAF50', '#2196F3', '#FF9800', '#F44336'],
                    hoverBackgroundColor: ['#45a049', '#1976D2', '#e68900', '#d32f2f'],
                    hoverBorderColor: "rgba(255, 255, 255, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    backgroundColor: "#ffffff",
                    bodyFontColor: "#666666",
                    borderColor: '#e8e8e8',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                },
                legend: {
                    display: false
                },
                cutoutPercentage: 80,
            },
        });

        function number_format(number, decimals, dec_point, thousands_sep) {
            number = (number + '').replace(',', '').replace(' ', '');
            var n = !isFinite(+number) ? 0 : +number,
                prec = !isFinite(+decimals) ? 0 : Math.abs(decimals),
                sep = (typeof thousands_sep === 'undefined') ? ',' : thousands_sep,
                dec = (typeof dec_point === 'undefined') ? '.' : dec_point,
                s = '',
                toFixedFix = function(n, prec) {
                    var k = Math.pow(10, prec);
                    return '' + Math.round(n * k) / k;
                };
            s = (prec ? toFixedFix(n, prec) : '' + Math.round(n)).split('.');
            if ((sep.length > 0)) {
                s[0] = s[0].replace(/\B(?=(?:\d{3})+(?!\d))/g, sep);
            }
            if ((s[1] || '').length < prec) {
                s[1] = s[1] || '';
                s[1] += new Array(prec - s[1].length + 1).join('0');
            }
            return s.join(dec);
        }
    </script>
}