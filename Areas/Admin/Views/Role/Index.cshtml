@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Danh sách vai trò";
}

<h3>Danh sách vai trò</h3>
<a asp-action="Create" asp-controller="Role" class="btn btn-primary mb-3">Thêm vai trò</a>

<table class="table table-bordered table-striped" id="myTable">
    <thead>
        <tr>
            <th>Mã vai trò</th>
            <th>Tên vai trò</th>
            <th>Tên hiển thị</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    @* <a asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion">Xóa</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
