@model SellRequestModel
@using Shopping_Demo.Models

@{
    ViewData["Title"] = "Từ Chối Đơn Thu Mua";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-times-circle"></i> Từ Chối Đơn Thu Mua #@Model.Id
        </h1>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay Lại
            </a>
            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info">
                <i class="fas fa-eye"></i> Xem Chi Tiết
            </a>
        </div>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Cảnh báo:</strong> Bạn đang từ chối đơn thu mua này. Hành động này sẽ cập nhật trạng thái thành "Từ chối" và gửi phản hồi cho khách hàng.
    </div>

    <form asp-action="Reject" method="post">
        <div class="row">
            <!-- Customer Information (Read-only) -->
            <div class="col-lg-6">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-user"></i> Thông Tin Khách Hàng
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label><strong>Họ và tên:</strong></label>
                            <div class="form-control-plaintext">@Model.FullName</div>
                        </div>
                        <div class="form-group">
                            <label><strong>Email:</strong></label>
                            <div class="form-control-plaintext">@Model.Email</div>
                        </div>
                        <div class="form-group">
                            <label><strong>Số điện thoại:</strong></label>
                            <div class="form-control-plaintext">@Model.PhoneNumber</div>
                        </div>
                        <div class="form-group">
                            <label><strong>Ngày tạo:</strong></label>
                            <div class="form-control-plaintext">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Information (Read-only) -->
            <div class="col-lg-6">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-watch"></i> Thông Tin Sản Phẩm
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Product != null)
                        {
                            <div class="form-group">
                                <label><strong>Tên sản phẩm:</strong></label>
                                <div class="form-control-plaintext">@Model.Product.Name</div>
                            </div>
                            <div class="form-group">
                                <label><strong>Thương hiệu:</strong></label>
                                <div class="form-control-plaintext">@Model.Product.Brand?.Name</div>
                            </div>
                            <div class="form-group">
                                <label><strong>Giá hiện tại:</strong></label>
                                <div class="form-control-plaintext">
                                    <span class="font-weight-bold text-success">
                                        @Model.Product.Price.ToString("N0") VNĐ
                                    </span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                Sản phẩm không tồn tại hoặc đã bị xóa.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Watch Information (Read-only) -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-info-circle"></i> Thông Tin Đồng Hồ
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><strong>Mô tả đồng hồ:</strong></label>
                                    <div class="border p-3 rounded bg-light">@Model.WatchInfo</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label><strong>Tình trạng:</strong></label>
                                            <div class="border p-2 rounded bg-light">
                                                @(string.IsNullOrEmpty(Model.Condition) ? "Chưa cung cấp" : Model.Condition)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label><strong>Năm sản xuất:</strong></label>
                                            <div class="border p-2 rounded bg-light">
                                                @(Model.Year?.ToString() ?? "Chưa cung cấp")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="form-group">
                                <label><strong>Ghi chú thêm:</strong></label>
                                <div class="border p-3 rounded bg-light">@Model.Notes</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Rejection Form -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-danger">
                            <i class="fas fa-ban"></i> Lý Do Từ Chối
                        </h6>
                    </div>
                    <div class="card-body">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="form-group">
                            <label asp-for="AdminResponse" class="control-label"><strong>Lý do từ chối:</strong></label>
                            <textarea asp-for="AdminResponse" class="form-control" rows="6" 
                                      placeholder="Nhập lý do từ chối đơn thu mua này..."></textarea>
                            <span asp-validation-for="AdminResponse" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <strong>Bắt buộc:</strong> Phản hồi này sẽ được gửi cho khách hàng và trạng thái đơn sẽ được cập nhật thành "Từ chối"
                            </small>
                        </div>

                        <!-- Common rejection reasons -->
                        <div class="form-group">
                            <label><strong>Lý do từ chối phổ biến:</strong></label>
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-outline-secondary btn-sm mb-2" onclick="setRejectionReason('Sản phẩm không đáp ứng tiêu chuẩn chất lượng')">
                                        Chất lượng không đạt
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm mb-2" onclick="setRejectionReason('Giá đề xuất không phù hợp với thị trường')">
                                        Giá không phù hợp
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-outline-secondary btn-sm mb-2" onclick="setRejectionReason('Sản phẩm không còn được thu mua')">
                                        Không thu mua loại này
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm mb-2" onclick="setRejectionReason('Thông tin sản phẩm không đầy đủ')">
                                        Thiếu thông tin
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="button-container">
                            <div class="button-group-left">
                                <button type="submit" class="btn btn-danger" onclick="return confirmRejection()">
                                    <i class="fas fa-ban"></i> Xác Nhận Từ Chối
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Hủy
                                </a>
                            </div>
                            <div class="button-group-right">
                                <a href="@Url.Action("Contact", new { id = Model.Id })" class="btn btn-info">
                                    <i class="fas fa-envelope"></i> Liên Hệ Thay Vì Từ Chối
                                </a>
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Chỉnh Sửa Đơn
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    /* Button alignment fixes - Force alignment */
    .card-body .d-flex.justify-content-between {
        display: flex !important;
        justify-content: space-between !important;
        align-items: center !important;
        width: 100% !important;
        min-height: 60px !important;
        padding: 0 !important;
    }
    
    .card-body .d-flex.gap-2 {
        display: flex !important;
        gap: 0.75rem !important;
        align-items: center !important;
        flex-wrap: nowrap !important;
    }
    
    .card-body .btn {
        display: inline-flex !important;
        align-items: center !important;
        justify-content: center !important;
        gap: 0.5rem !important;
        white-space: nowrap !important;
        vertical-align: middle !important;
        min-height: 40px !important;
        padding: 0.5rem 1rem !important;
        font-size: 0.875rem !important;
        font-weight: 500 !important;
        line-height: 1.5 !important;
        border-radius: 0.375rem !important;
        border: 1px solid transparent !important;
        text-decoration: none !important;
        transition: all 0.15s ease-in-out !important;
        flex-shrink: 0 !important;
    }
    
    .card-body .btn i {
        font-size: 0.875rem !important;
        line-height: 1 !important;
    }
    
    /* Specific button styles */
    .card-body .btn-primary {
        background-color: #0d6efd !important;
        border-color: #0d6efd !important;
        color: #fff !important;
    }
    
    .card-body .btn-primary:hover {
        background-color: #0b5ed7 !important;
        border-color: #0a58ca !important;
        color: #fff !important;
    }
    
    .card-body .btn-secondary {
        background-color: #6c757d !important;
        border-color: #6c757d !important;
        color: #fff !important;
    }
    
    .card-body .btn-secondary:hover {
        background-color: #5c636a !important;
        border-color: #565e64 !important;
        color: #fff !important;
    }
    
    .card-body .btn-danger {
        background-color: #dc3545 !important;
        border-color: #dc3545 !important;
        color: #fff !important;
    }
    
    .card-body .btn-danger:hover {
        background-color: #bb2d3b !important;
        border-color: #b02a37 !important;
        color: #fff !important;
    }
    
    .card-body .btn-info {
        background-color: #0dcaf0 !important;
        border-color: #0dcaf0 !important;
        color: #000 !important;
    }
    
    .card-body .btn-info:hover {
        background-color: #3dd5f3 !important;
        border-color: #25cff2 !important;
        color: #000 !important;
    }
    
    .card-body .btn-warning {
        background-color: #ffc107 !important;
        border-color: #ffc107 !important;
        color: #000 !important;
    }
    
    .card-body .btn-warning:hover {
        background-color: #ffca2c !important;
        border-color: #ffc720 !important;
        color: #000 !important;
    }
    
    /* Responsive button layout */
    @@media (max-width: 768px) {
        .card-body .d-flex.justify-content-between {
            flex-direction: column !important;
            gap: 1rem !important;
            align-items: stretch !important;
            min-height: auto !important;
        }
        
        .card-body .d-flex.gap-2 {
            justify-content: center !important;
            width: 100% !important;
        }
        
        .card-body .btn {
            width: 100% !important;
            justify-content: center !important;
        }
    }
</style>

@section Scripts {
    <script>
        function setRejectionReason(reason) {
            const textarea = document.querySelector('textarea[name="AdminResponse"]');
            if (textarea) {
                textarea.value = reason;
                textarea.style.height = 'auto';
                textarea.style.height = textarea.scrollHeight + 'px';
            }
        }

        function confirmRejection() {
            const textarea = document.querySelector('textarea[name="AdminResponse"]');
            if (!textarea.value.trim()) {
                alert('Vui lòng nhập lý do từ chối trước khi tiếp tục.');
                textarea.focus();
                return false;
            }

            return confirm('Bạn có chắc chắn muốn từ chối đơn thu mua này không?\n\nHành động này sẽ:\n- Cập nhật trạng thái thành "Từ chối"\n- Gửi phản hồi cho khách hàng\n- Không thể hoàn tác');
        }

        // Auto-resize textarea
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.querySelector('textarea[name="AdminResponse"]');
            if (textarea) {
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = this.scrollHeight + 'px';
                });
            }
        });
    </script>
}