    <!-- Notification Script -->
    <script>
        var message = @Html.Raw(Json.Serialize(TempData["success"]));
        var errorMessage = @Html.Raw(Json.Serialize(TempData["error"]));

        if (message) {
            Swal.fire({
                title: "Thông báo",
                text: message,
                icon: "success"
            });
        }
        if (errorMessage) {
            Swal.fire({
                title: "Lỗi!",
                text: errorMessage,
                icon: "error"
            });
        }
    </script>

